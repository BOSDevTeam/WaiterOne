<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <customfont.BOSEditText  android:id="@+id/etUserName"
        style="@style/styleSetupDialogEditText"
        android:hint="User Name"
        android:imeOptions="actionNext"/>

    <EditText  android:id="@+id/etPassword"
        style="@style/styleSetupDialogEditText"
        android:hint="Password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>

    <TextView android:id="@+id/tvLabelAllowRight"
        style="@style/dialogSubTitle"
        android:text="@string/choose_module" />

    <ListView android:id="@+id/lvModule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>

    <LinearLayout style="@style/dialogBottom">

        <Button android:id="@+id/btnClose"
            style="@style/styleSetupDialogCloseButton"/>

        <Button android:id="@+id/btnSave"
            style="@style/styleSetupDialogSaveButton"/>

    </LinearLayout>
</LinearLayout>