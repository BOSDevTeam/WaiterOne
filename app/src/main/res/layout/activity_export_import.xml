<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportImportActivity"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

    <Button android:id="@+id/btnImportFromCSV"
        android:text="@string/import_data_from_csv"
        android:drawableTop="@drawable/ic_file_download"
        style="@style/styleImportExportButton"/>

    <Button android:id="@+id/btnExportToCSV"
        android:text="@string/export_data_to_csv"
        android:drawableTop="@drawable/ic_file_upload"
        style="@style/styleImportExportButton"/>

    <Button android:id="@+id/btnImportTranFromCSV"
        android:text="@string/import_tran_from_csv"
        android:drawableTop="@drawable/ic_file_download"
        style="@style/styleImportExportButton"/>

    <Button android:id="@+id/btnExportTranToCSV"
        android:text="@string/export_tran_to_csv"
        android:drawableTop="@drawable/ic_file_upload"
        style="@style/styleImportExportButton"/>

    </LinearLayout>

</LinearLayout>
