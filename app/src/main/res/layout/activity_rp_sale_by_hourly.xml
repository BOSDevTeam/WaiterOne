<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorFirstPri">

        <customfont.ArialTextView android:id="@+id/tvFromDate"
            style="@style/styleReportDateText"
            android:text="From Date" />

        <customfont.ArialTextView android:id="@+id/tvToDate"
            style="@style/styleReportDateText"
            android:text="To Date" />

        <customfont.ArialTextView android:id="@+id/tvToday"
            style="@style/styleReportTodayLabel"
            android:text="(Today)"
            android:visibility="gone">
        </customfont.ArialTextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorReportListHeader">

        <customfont.ArialTextView android:id="@+id/tvHeaderTime"
            style="@style/styleReportHeaderTextViewRatio"
            android:text="Time" />
        <customfont.ArialTextView android:id="@+id/tvHeaderTotalTransaction"
            style="@style/styleReportHeaderTextViewRatio"
            android:text="#Transactions" />
        <customfont.ArialTextView android:id="@+id/tvHeaderTotalItem"
            style="@style/styleReportHeaderTextViewRatio"
            android:text="#Item"/>
        <customfont.ArialTextView android:id="@+id/tvHeaderTotalAmount"
            style="@style/styleReportHeaderTextViewRatio"
            android:text="Amount" />
        <customfont.ArialTextView android:id="@+id/tvHeaderTotalCustomer"
            style="@style/styleReportHeaderTextViewRatio"
            android:text="#Customer"/>

    </LinearLayout>

    <ListView android:id="@+id/lvReportSaleByHourly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>