<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView android:id="@+id/tvFromDate"
                style="@style/styleReportDateText"
                android:text="From Date" />

            <TextView android:id="@+id/tvToDate"
                style="@style/styleReportDateText"
                android:text="To Date" />

            <TextView android:id="@+id/tvToday"
                style="@style/styleReportTodayLabel"
                android:text="(Today)"
                android:visibility="gone">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView android:id="@+id/tvLabelDescription"
                style="@style/styleReportSaleAmountHeader"
                android:text="Description"
                android:layout_gravity="left"/>

            <TextView android:id="@+id/tvLabelData"
                style="@style/styleReportSaleAmountHeader"
                android:text="Data"
                android:layout_gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView android:id="@+id/tvLabelSubTotal"
                    style="@style/styleReportSaleAmountList"
                    android:text="Subtotal"
                    android:background="@color/colorWhite"/>

                <TextView android:id="@+id/tvLabelGrandTotal"
                    style="@style/styleReportSaleAmountList"
                    android:text="Grand Total"
                    android:background="@color/colorGray1"/>

                <TextView android:id="@+id/tvLabelTax"
                    style="@style/styleReportSaleAmountList"
                    android:text="Tax"
                    android:background="@color/colorWhite"/>

                <TextView android:id="@+id/tvLabelCharges"
                    style="@style/styleReportSaleAmountList"
                    android:text="Charges"
                    android:background="@color/colorGray1"/>

                <TextView android:id="@+id/tvLabelDiscount"
                    style="@style/styleReportSaleAmountList"
                    android:text="Discount"
                    android:background="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView android:id="@+id/tvSubTotal"
                    style="@style/styleReportSaleAmountList"
                    android:background="@color/colorWhite"/>

                <TextView android:id="@+id/tvGrandTotal"
                    style="@style/styleReportSaleAmountList"
                    android:background="@color/colorGray1"/>

                <TextView android:id="@+id/tvTax"
                    style="@style/styleReportSaleAmountList"
                    android:background="@color/colorWhite"/>

                <TextView android:id="@+id/tvCharges"
                    style="@style/styleReportSaleAmountList"
                    android:background="@color/colorGray1"/>

                <TextView android:id="@+id/tvDiscount"
                    style="@style/styleReportSaleAmountList"
                    android:background="@color/colorWhite"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>