<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <customfont.BOSEditText  android:id="@+id/etMainMenu"
        style="@style/styleSetupDialogEditText"
        android:hint="Main Menu" />

    <EditText  android:id="@+id/etCounterID"
        style="@style/styleSetupDialogEditText"
        android:hint="CounterID"
        android:inputType="number"/>

    <LinearLayout style="@style/dialogBottom">

        <Button android:id="@+id/btnClose"
            style="@style/styleSetupDialogCloseButton"/>

        <Button android:id="@+id/btnSave"
            style="@style/styleSetupDialogSaveButton"/>

    </LinearLayout>
</LinearLayout>