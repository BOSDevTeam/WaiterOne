<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bosictsolution.waiterone.ReportListActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView android:id="@+id/tvLabelFromDate"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="From Date"
            android:gravity="center"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <Button android:id="@+id/btnFromDate"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="From Date"
            android:background="@drawable/primary_button"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/regular_text_size"
            android:visibility="gone"/>

        <Button android:id="@+id/btnFromDate2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="From Date"
            android:background="@drawable/primary_button"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/regular_text_size"/>

        <TextView android:id="@+id/tvLabelToDate"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="To Date"
            android:gravity="center"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <Button android:id="@+id/btnToDate"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="To Date"
            android:background="@drawable/primary_button"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/regular_text_size"
            android:visibility="gone"/>

        <Button android:id="@+id/btnToDate2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="To Date"
            android:background="@drawable/primary_button"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/regular_text_size" />


    </LinearLayout>

    <ListView android:id="@+id/lvReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
