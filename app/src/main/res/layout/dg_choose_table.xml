<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <TextView android:id="@+id/tvLabelChooseTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:text="Choose Table"
            android:textSize="@dimen/large_text_size" />

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary">
    </LinearLayout>

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <Spinner android:id="@+id/spSearchTableType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray1"
            android:popupBackground="@color/colorGray2"></Spinner>

        <ListView android:id="@+id/lvTable"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <customfont.BOSButton android:id="@+id/btnViewByTableType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/primary_button"
            android:text="OK"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/regular_text_size"
            android:padding="10dp"
            android:textAllCaps="false"/>

            <Button android:id="@+id/btnViewAllTable"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/primary_button"
                android:text="View All"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/regular_text_size"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
