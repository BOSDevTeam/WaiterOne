<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <Spinner  android:id="@+id/spMainMenu"
        style="@style/styleSetupDialogSpinner"/>

    <customfont.BOSEditText  android:id="@+id/etSubMenu"
        style="@style/styleSetupDialogEditText"
        android:hint="Sub Menu" />

    <customfont.BOSEditText  android:id="@+id/etSortCode"
        style="@style/styleSetupDialogEditText"
        android:hint="Sort Code"
        android:inputType="number"/>

    <LinearLayout style="@style/dialogBottom">

        <Button android:id="@+id/btnClose"
            style="@style/styleSetupDialogCloseButton"/>

        <Button android:id="@+id/btnSave"
            style="@style/styleSetupDialogSaveButton"/>

    </LinearLayout>
</LinearLayout>