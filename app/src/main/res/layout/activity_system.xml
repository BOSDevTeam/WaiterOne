<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bosictsolution.waiterone.SystemActivity"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

    <Button android:id="@+id/btnDataSetup"
        android:text="@string/data_setup"
        android:drawableTop="@drawable/ic_data_setting"
        style="@style/styleSystemButton"/>

    <Button android:id="@+id/btnCSVImportExport"
        android:text="@string/csv_import_export"
        android:drawableTop="@drawable/ic_import_export"
        style="@style/styleSystemButton"/>

    <Button android:id="@+id/btnServerImport"
        android:text="@string/server_import"
        android:drawableTop="@drawable/ic_file_download"
        style="@style/styleSystemButton"/>

    <Button android:id="@+id/btnDeleteTran"
        android:text="@string/delete_transaction"
        android:drawableTop="@drawable/ic_delete_sweep"
        style="@style/styleSystemButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button android:id="@+id/btnResetSlipId"
            android:text="@string/reset_slipid"
            android:drawableTop="@drawable/ic_refresh"
            style="@style/styleSystemButton"/>

        <Button android:id="@+id/btnBackupData"
            android:text="@string/backup_data"
            android:drawableTop="@drawable/ic_backup"
            style="@style/styleSystemButton"/>

        <Button android:id="@+id/btnDeleteVoucher"
            android:text="@string/delete_voucher"
            android:drawableTop="@drawable/ic_delete_forever"
            style="@style/styleSystemButton"/>

        <Button android:id="@+id/btnDelExtraTran"
            android:text="@string/delete_extra"
            android:drawableTop="@drawable/ic_delete_forever"
            style="@style/styleSystemButton"/>

        <Button android:id="@+id/btnCustomBackupData"
            android:text="@string/backup_data_custom_path"
            android:drawableTop="@drawable/ic_backup"
            style="@style/styleSystemButton"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
